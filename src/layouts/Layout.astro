---
export interface Props {
  title?: string;
  description?: string;
}

const { title = 'AstroGlossary', description = 'Learn astrology with our comprehensive glossary and chart tools' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <header class="bg-white shadow-sm border-b border-gray-200">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/astroglossary/" class="text-xl font-bold text-primary-600">
              âœ¨ AstroGlossary
            </a>
          </div>
          <div class="flex items-center space-x-8">
            <a href="/astroglossary/" class="text-gray-700 hover:text-primary-600 transition-colors">
              Home
            </a>
            <a href="/astroglossary/glossary/" class="text-gray-700 hover:text-primary-600 transition-colors">
              Glossary
            </a>
            <a href="/astroglossary/charts/" class="text-gray-700 hover:text-primary-600 transition-colors">
              Charts
            </a>
          </div>
        </div>
      </nav>
    </header>
    
    <main class="min-h-screen">
      <slot />
    </main>
    
    <footer class="bg-gray-800 text-white py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <p>&copy; 2024 AstroGlossary. Learn astrology with confidence.</p>
        </div>
      </div>
    </footer>
  </body>
</html>